%class PomodoroViewController
%include PomodoroViewController.h
%package pomodoro

%start PomodoroFSM::Suspended

%map PomodoroFSM
%%
Suspended 
	Entry {
		pomodoroGray();
		welcome();
	}
	{
		pressPomodoro	
		Running	
		{ }
	}

Running
	Entry {
		pomodoroRed();
		startTimer(25);
	}
	Exit {
		stopTimer();
	}
	{
		pressPomodoro
		Suspended
		{ }
	
		timeOut
		Done
		{ }
	}

Done
	Entry {
		ring();
		pomodoroGray();
		wellDone();
	}
	{
		pressPomodoro
		Break 
		{ }
	}

Break
	Entry {
		pomodoroGreen();	
		startTimer(5);
	}
	Exit {
		ring();
		stopTimer();
	}
	{
		pressPomodoro
		Suspended 
		{ }
		
		timeOut
		Suspended 
		{ }
	}
%%